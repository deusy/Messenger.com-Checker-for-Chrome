{
   "background": {
      "scripts": [ "background.js" ]
   },
   "browser_action": {
      "default_icon": "icon.png",
      "default_title": "Messenger.com Checker"
   },
   "description": "Notifications for the Messenger.com service by Facebook.",
   "icons": {
      "128": "icon128.png",
      "16": "icon16.png",
      "48": "icon48.png"
   },
   "manifest_version": 2,
   "name": "Facebook Messenger.com Checker",
   "optional_permissions": [ "background" ],
   "options_page": "options.html",
   "permissions": [ "tabs", "notifications", "http://www.facebook.com/", "https://www.facebook.com/", "http://www.messenger.com/", "https://www.messenger.com/" ],
   "version": "1",
   "web_accessible_resources": [ "icon48.png" ]
}
